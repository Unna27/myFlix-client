{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["eslint:recommended"],
  "plugins": [
    // ...
    "react-hooks"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "no-console": "error",
    // ...
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
